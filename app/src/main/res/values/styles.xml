<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextView">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Text" parent="TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:fontFeatureSettings">case</item>
    </style>


    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.18_18">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="Text.14_14">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14sp</item>
    </style>

    <style name="Text.Bold.14_14">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14sp</item>
    </style>

</resources>